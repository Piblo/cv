---
interface Props {
  company: string;
  role: string;
  startDate: string;
  endDate?: string;
}
---

<div class="flex items-start gap-4 mb-2">
  <div
    class="icon-wrapper p-1 box-content shrink-0 border rounded flex items-center border-neutral-light border-dashed"
  >
    <slot name="icon" />
  </div>

  <div>
    <h3 class="font-bold">{Astro.props.company} - {Astro.props.role}</h3>
    <p class="text-muted text-sm mb-2">
      {Astro.props.startDate} - {Astro.props.endDate ?? <i>Present</i>}
    </p>
    <p>
      <slot />
    </p>
  </div>
</div>

<style>
  .icon-wrapper {
    svg {
      width: 36px;
      height: 36px;
      fill: var(--color-muted);
    }
  }
</style>
