---
import "../styles/global.css";
import TechStack from "../components/TechStack.astro";
import CurrentRole from "../components/CurrentRole.astro";
import PreviousExperience from "../components/PreviousExperience.astro";
import HeadingDecorator from "../components/HeadingDecorator.astro";
import "@fontsource-variable/geist";
import Education from "../components/Education.astro";
import Contact from "../components/Contact.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Pablo Guerrero - CV</title>
  </head>
  <body class="max-w-4xl p-4 mx-auto py-14">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-4">
        <HeadingDecorator /> Pablo Guerrero
      </h1>
      <p class="text-muted">
        Principal Software Engineer passionate about building scalable,
        maintainable web platforms. Experienced in React, Next.js, serverless
        architectures, and cloud migrations. Skilled in mentoring engineers,
        improving delivery pipelines, and creating systems that perform at
        scale.
      </p>
    </header>
    <main>
      <TechStack class="mb-10" />
      <CurrentRole class="mb-10" />
      <PreviousExperience class="mb-10" />
      <Education class="mb-12" />
      <hr class="w-2xs md:w-sm mx-auto mb-12 border-neutral-light" />
      <Contact class="mb-12" />
    </main>
  </body>
</html>
